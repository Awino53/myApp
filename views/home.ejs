<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="calendar">
      <div class="month-title">
        <span id="month"></span>
        <span id="day"></span>
      </div>
      <div class="days">
        <span>S</span>
        <span>M</span>
        <span>T</span>
        <span>W</span>
        <span>T</span>
        <span>F</span>
        <span>S</span>
      </div>
      <div class="week-dates" id="week-dates">
        <!-- JavaScript will populate the week dates here -->
      </div>
    </div>

    <style>
      .calendar {
        text-align: center;
        padding: 40px;
      }

      .month-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .days {
        display: flex;
        justify-content: center;
        gap: 40px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .week-dates {
        display: flex;
        justify-content: center;
        gap: 10px;
      }

      .week-dates .date {
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        background-color: #e0e0e0;
      }

      .week-dates .today {
        background-color: #4caf50;
        color: white;
        font-weight: bold;
      }
    </style>

    <!-- this space is for editing expenditure -->

    <table id="expensesTable">
      <thead>
        <tr>
          <th>Type</th>
          <th>Amount</th>
          <th>Description</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
       
      <tbody>
        <% if (expenses && expenses.length > 0) { %> 
          <% expenses.forEach(expense => { 
            const formattedDate = expense.date ? new Date(expense.date).toISOString().slice(0, 10) : 'Invalid Date';
          %>
            <tr>
              <td><%= expense.type %></td>
              <td><%= expense.amount %></td>
              <td><%= expense.description %></td>
              <td><%= formattedDate %></td>
              <td>
                <button
                  class="edit-button"
                  data-expense-id="<%= expense.expense_id %>"
                  data-type="<%= JSON.stringify(expense.type) %>"
                  data-amount="<%= expense.amount %>"
                  data-description="<%= JSON.stringify(expense.description) %>"
                  data-date="<%= formattedDate %>"
                  onclick="openEditForm(this)"
                >
                  Edit
                </button>
              </td>
            </tr>
          <% }) %> 
        <% } else { %>
          <tr>
            <td colspan="5">No expenses found</td>
          </tr>
        <% } %>
      </tbody>
      
       
      
      <tfoot>
        <tr>
          <td colspan="5">Total: ksh.<span id="totalExpenses"></span></td>
        </tr>
      </tfoot>
    </table>

    <!-- Edit Form Modal -->
    <div id="editFormModal" style="display: none">
      <form id="editExpenseForm">
        <label>Type: <input type="text" id="editType" name="type" /></label
        ><br />
        <label
          >Amount:
          <input
            type="number"
            id="editAmount"
            name="amount"
            step="0.01" /></label
        ><br />
        <label
          >Description:
          <input type="text" id="editDescription" name="description" /></label
        ><br />
        <label>Date: <input type="date" id="editDate" name="date" /></label
        ><br />
        <button type="submit">Save</button>
        <button type="button" onclick="closeEditForm()">Cancel</button>
      </form>
    </div>

    <%- include('_footer.ejs') %>

    <script src="index.js"></script>
  </body>
</html>
