<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign-Up</title>
    <link rel="stylesheet" href="main.css" />
    <link rel="shortcut icon" href="logo.png" type="image/x-icon" />
  </head>
  <body>
    <style>
      form {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
      }
      label,
      input {
        display: block;
        margin-bottom: 10px;
        width: 100%;
      }
      input {
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
      button {
        padding: 10px;
        background-color: #14d01e;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      button:hover {
        background-color: #0e3803;
      }
      .error {
        color: red;
        font-size: 0.9em;
        display: block;
        margin-top: -8px;
        margin-bottom: 10px;
      }
    </style>

    <form
      action="/register"
      method="post"
      class="user-input"
      id="registrationForm"
    >
      <div class="input">
        <label for="username" id="action">Full Name</label>
        <input
          type="text"
          id="username"
          placeholder="Full Name"
          name="full_name"
          required
        />
      </div>

      <div class="input">
        <label for="email" id="action">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>

      <div class="input">
        <label for="password" id="action">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          minlength="6"
          required
        />
      </div>

      <div class="input">
        <label for="confirm-password" id="action">Confirm Password</label>
        <input
          type="password"
          id="confirm-password"
          name="confirm-password"
          placeholder="Confirm Password"
          required
        />
      </div>
      <p id="error-message" style="color: orangered"></p>

      <div class="submit">
        <button type="submit" id="submit">Register</button>
      </div>

      <p>Already have an account? <a href="/login">Login</a></p>
    </form>

    <script>
      document
        .getElementById("registrationForm")
        .addEventListener("submit", function (event) {
          const password = document.getElementById("password").value;
          const confirmPassword =
            document.getElementById("confirm-password").value;

          // Check if passwords match
          if (password !== confirmPassword) {
            event.preventDefault(); // Prevent form submission
            document.getElementById("error-message").textContent =
              "Passwords do not match!";
          }
        });
    </script>
  </body>
</html>
