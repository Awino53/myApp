      <div class="chart-container">
        <!-- Bora Bora Vacation Pie Chart -->
        <div class="chart-box">
          <h3>Bora bora vacation</h3>
          <canvas id="boraBoraChart"> </canvas>
        </div>

        <!-- Debt-Free Progress Bar -->
        <div class="progress-container">
          <h3>Debt-Free by Next Year</h3>
          <canvas id="debtFreeChart"></canvas>
        </div>
      </div>

      <script>
        // Bora Bora Vacation Pie Chart
        const boraBoraData = {
          labels: ["Achieved (Ksh 20,000)", "Remaining"],
          datasets: [
            {
              data: [70, 30], // 70% achieved, 30% remaining
              backgroundColor: ["#4CAF50", "#FFC107"], // Green for achieved, yellow for remaining
              borderWidth: 1,
            },
          ],
        };

        const boraBoraConfig = {
          type: "pie",
          data: boraBoraData,
          options: {
            responsive: true,
            plugins: {
              legend: {
                position: "top",
              },
              tooltip: {
                callbacks: {
                  label: (tooltipItem) => {
                    const label = tooltipItem.label || "";
                    const value = tooltipItem.raw;
                    return `${label}: ${value}%`;
                  },
                },
              },
            },
          },
        };

        new Chart(document.getElementById("boraBoraChart"), boraBoraConfig);

        // Debt-Free by Next Year Bar Chart
        const debtFreeData = {
          labels: ["Debt-Free by Next Year"],
          datasets: [
            {
              label: "Paid",
              data: [50], // 50% achieved
              backgroundColor: "#4CAF50", // Green for paid portion
            },
            {
              label: "Remaining",
              data: [50], // 50% remaining
              backgroundColor: "#FFC107", // Yellow for remaining portion
            },
          ],
        };

        const debtFreeConfig = {
          type: "bar",
          data: debtFreeData,
          options: {
            indexAxis: "y",
            responsive: true,
            plugins: {
              legend: {
                position: "top",
              },
            },
            scales: {
              x: {
                max: 100, // Set max scale to 100%
              },
            },
          },
        };

        new Chart(document.getElementById("debtFreeChart"), debtFreeConfig);
      </script>
